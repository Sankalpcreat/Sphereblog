<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Add New Blog</title>
    <style>
        .bg-light-blue {
            background-color: #e0f7fa; /* Light blue background color */
        }
        .form-container {
            padding: 2rem;
            border-radius: 0.5rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            background-color: #f5f5dc; /* Cream background color */
        }
        .form-control,
        .custom-file-input {
            background-color: #ffffff; /* White background for input boxes */
            border-radius: 0.25rem;
        }
        .custom-file-input::file-selector-button {
            background-color: #b3e5fc; /* Light blue button color */
            border: 1px solid #81d4fa; /* Border color for the button */
            color: #01579b; /* Text color for the button */
            border-radius: 0.25rem;
            padding: 0.375rem 0.75rem;
            transition: background-color 0.3s, border-color 0.3s;
        }
        .custom-file-input::file-selector-button:hover {
            background-color: #81d4fa; /* Light blue hover effect */
            border-color: #0288d1; /* Darker border color on hover */
        }
        .btn-primary-custom {
            background-color: #007bff;
            border-color: #007bff;
            transition: background-color 0.3s, border-color 0.3s;
            border-radius: 0.25rem;
        }
        .btn-primary-custom:hover {
            background-color: #0056b3;
            border-color: #004085;
        }
        .form-label {
            font-weight: bold;
        }
    </style>
</head>
<body class="bg-light-blue">
    <%- include('./partials/nav') %>

    <div class="container mt-5">
        <div class="form-container">
            <h2 class="text-center mb-4">Add New Blog</h2>
            <form action="/blog" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="coverImage" class="form-label">Cover Image</label>
                    <input
                        type="file"
                        class="form-control custom-file-input"
                        id="coverImage"
                        name="coverImage"
                        aria-describedby="coverImage"
                    />
                    <label class="custom-file-label" for="coverImage"></label> <!-- Removed text -->
                </div>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input
                        type="text"
                        class="form-control"
                        id="title"
                        name="title"
                        aria-describedby="title"
                    />
                </div>
                <div class="mb-3">
                    <label for="body" class="form-label">Body</label>
                    <textarea name="body" class="form-control" id="body" rows="5"></textarea>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary btn-primary-custom">Submit</button>
                </div>
            </form>
        </div>
    </div>

    <%- include('./partials/scripts') %>
</body>
</html>
